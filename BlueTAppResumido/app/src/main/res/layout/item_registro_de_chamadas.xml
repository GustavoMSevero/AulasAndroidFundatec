<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_item_registro_de_chamadas_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:textSize="18dp"
        android:padding="5dp"
        android:text="Data: " />

    <TextView
        android:id="@+id/tv_item_registro_de_chamadas_presencas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:padding="5dp"
        android:text="PresenÃ§as: "
        android:layout_below="@id/tv_item_registro_de_chamadas_data" />

    <TextView
        android:id="@+id/tv_item_registro_de_chamadas_ementa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:padding="5dp"
        android:text="Ementa: "
        android:layout_below="@id/tv_item_registro_de_chamadas_presencas" />

    <TextView
        android:id="@+id/tv_registro_de_chamadas_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:padding="5dp"
        android:text="TextView"
        android:layout_alignBottom="@+id/tv_item_registro_de_chamadas_data"
        android:layout_toRightOf="@+id/tv_item_registro_de_chamadas_data"
        android:singleLine="true" />

    <TextView
        android:id="@+id/tv_registro_de_chamadas_presencas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:padding="5dp"
        android:text="TextView"
        android:layout_alignBottom="@+id/tv_item_registro_de_chamadas_presencas"
        android:layout_toRightOf="@+id/tv_item_registro_de_chamadas_presencas"
        android:singleLine="true" />

    <TextView
        android:id="@+id/tv_registro_de_chamadas_ementa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:padding="5dp"
        android:text="TextView"
        android:layout_alignBottom="@+id/tv_item_registro_de_chamadas_ementa"
        android:layout_toRightOf="@+id/tv_item_registro_de_chamadas_ementa"
        android:singleLine="true" />

</RelativeLayout>