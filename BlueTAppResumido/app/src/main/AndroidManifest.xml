<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="app.bluetappresumido" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".Activities.Main"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".Activities.ChamadaManual"></activity>
        <activity android:name=".Activities.AdicionarTurma"></activity>
        <activity android:name=".Activities.RemoverTurma"></activity>
        <activity android:name=".Activities.AdicionarAluno"></activity>
        <activity android:name=".Activities.RemoverAluno"></activity>
        <activity android:name=".Activities.InformacoesAluno"></activity>
        <activity android:name=".Activities.RegistroDeChamadas"></activity>
    </application>

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.INTERNET" />

</manifest>
